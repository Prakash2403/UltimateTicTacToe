<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/second"
    android:layout_width="match_parent"
    android:background="#FFFFF2CC"
    android:layout_height="match_parent"
    tools:context=".frontend.Second">

    <Button
        android:text="Options"
        android:layout_width="88dp"
        android:background="@drawable/circular_button"
        android:textColor="#FFFFFF"
        android:id="@+id/options"
        android:layout_height="88dp"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        android:layout_marginBottom="8dp" />

    <Button
        android:text="About Us"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/about_us"
        android:background="@drawable/circular_button"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/options"
        app:layout_constraintLeft_toRightOf="@+id/options"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintVertical_bias="0.38"
        app:layout_constraintRight_toRightOf="@+id/imageView11"
        app:layout_constraintHorizontal_bias="0.37" />

    <Button
        android:text="Start"
        android:layout_width="88dp"
        android:id="@+id/start"
        android:background="@drawable/circular_button"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/options"
        android:textColor="#FFFFFF"
        app:layout_constraintRight_toLeftOf="@+id/options"
        android:elevation="24dp"
        android:layout_height="88dp"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintLeft_toLeftOf="@+id/imageView11"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp" />

    <ImageView
        android:layout_width="0dp"
        app:srcCompat="@drawable/newtictactoe"
        android:id="@+id/imageView11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="375dp"
        android:layout_marginBottom="32dp" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.66"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView11" />

    <TextView
        android:text="       "
        android:textSize="50dp"
        android:background="#FFFFF2CC"
        android:id="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/options"
        app:layout_constraintRight_toLeftOf="@+id/options"
        app:layout_constraintBottom_toBottomOf="@+id/imageView11"
        app:layout_constraintLeft_toLeftOf="@+id/imageView11"
        android:layout_height="92dp"
        android:layout_width="92dp" />

    <TextView
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:background="#FFFFF2CC"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/options"
        app:layout_constraintBottom_toTopOf="@+id/options"
        app:layout_constraintTop_toTopOf="@+id/imageView11"
        app:layout_constraintRight_toRightOf="@+id/imageView11" />

</android.support.constraint.ConstraintLayout>