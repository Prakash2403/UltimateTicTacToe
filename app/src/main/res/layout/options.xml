<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFF2CC"
    tools:context=".frontend.Options">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="375dp"
        app:srcCompat="@drawable/clearimage"
        android:id="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp" />

    <ImageView
        android:layout_width="0dp"
        app:srcCompat="@drawable/options"
        android:id="@+id/imageView7"
        app:layout_constraintRight_toRightOf="@+id/imageView4"
        app:layout_constraintLeft_toLeftOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4"
        android:layout_height="50dp" />

    <CheckBox
        android:text="  Instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/instruction"

        android:textSize="22dp"
        android:fontFamily="casual"
        android:textColor="#0000BB"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView7"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:checked="false" />

    <CheckBox
        android:text="  Sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sound"
        android:textSize="22dp"
        android:fontFamily="casual"
        android:textColor="#0000BB"
        app:layout_constraintLeft_toLeftOf="@+id/instruction"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/instruction" />

</android.support.constraint.ConstraintLayout>